            "in": "path",
            "schema": { "type": "string" }
          },
          {
            "name": "network",
            "required": true,
            "in": "query",
            "schema": { "enum": ["testnet", "mainnet"], "type": "string" }
          },
          {
            "name": "protocol",
            "required": true,
            "in": "query",
            "schema": { "type": "array", "items": { "type": "string" } }
          }
