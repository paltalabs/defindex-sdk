              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "protocol": {
                        "type": "string",
                        "example": "soroswap",
                        "description": "Protocol name"
                      },
                      "address": {
                        "type": "string",
