# DefIndex SDK Environment Variables Example
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control!

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================

# Option 1: API Key Authentication (RECOMMENDED)
# Generate an API key from your DefIndex account
# API keys are more secure and don't expire like JWT tokens
DEFINDEX_API_KEY=sk_your_api_key_here

# Option 2: Email/Password Authentication (ALTERNATIVE)
# Use your DefIndex account credentials
# Required for integration tests if API key is not provided
DEFINDEX_API_EMAIL=your-email@example.com
DEFINDEX_API_PASSWORD=your-secure-password

# =============================================================================
# API CONFIGURATION
# =============================================================================

# DefIndex API Base URL
# Default: https://api.defindex.io
# Override for local development or staging environments
DEFINDEX_API_URL=https://api.defindex.io

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test timeout in milliseconds for integration tests
# Default: 30000 (30 seconds)
# Increase if experiencing network timeouts
TEST_TIMEOUT=30000

# Test network preference
# Options: TESTNET, MAINNET
# Default: TESTNET (safer for testing)
DEFAULT_TEST_NETWORK=TESTNET

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Node.js environment
# Options: development, production, test
NODE_ENV=development

# Enable debug logging for SDK
# Options: true, false
DEBUG_DEFINDEX_SDK=false

# Enable verbose test output
# Options: true, false
VERBOSE_TESTS=true

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Custom request timeout for all SDK operations (milliseconds)
# Default: 30000 (30 seconds)
SDK_TIMEOUT=30000

# Maximum number of retry attempts for failed requests
# Default: 3
MAX_RETRIES=3

# Delay between retry attempts (milliseconds)
# Default: 1000 (1 second)
RETRY_DELAY=1000

# =============================================================================
# INTEGRATION TEST SPECIFIC VARIABLES
# =============================================================================

# Skip integration tests if true
# Useful for CI/CD environments without credentials
SKIP_INTEGRATION_TESTS=false

# Test vault address for read-only operations
# Leave empty to use placeholder addresses
TEST_VAULT_ADDRESS=

# Test user address for balance queries
# Leave empty to use placeholder addresses  
TEST_USER_ADDRESS=

# Test API key name prefix for generated keys during tests
TEST_API_KEY_NAME_PREFIX=SDK_Integration_Test

# =============================================================================
# CI/CD CONFIGURATION
# =============================================================================

# CI environment detection
# Automatically set by most CI/CD systems
CI=false

# GitHub Actions specific
GITHUB_ACTIONS=false

# Other CI systems (set to true if running in CI)
# Examples: JENKINS, TRAVIS, CIRCLECI, etc.
JENKINS=false
TRAVIS=false
CIRCLECI=false

# =============================================================================
# SECURITY NOTES
# =============================================================================

# 1. NEVER commit .env files to version control
# 2. Use different API keys for different environments
# 3. Rotate API keys regularly
# 4. Use API keys instead of passwords in CI/CD
# 5. Limit API key permissions to minimum required
# 6. Monitor API key usage for suspicious activity

# =============================================================================
# USAGE EXAMPLES
# =============================================================================

# For unit tests (no credentials needed):
# pnpm test

# For integration tests with API key:
# cp .env.example .env
# # Edit .env and set DEFINDEX_API_KEY
# pnpm run test:integration

# For integration tests with email/password:
# cp .env.example .env  
# # Edit .env and set DEFINDEX_API_EMAIL and DEFINDEX_API_PASSWORD
# pnpm run test:integration

# For all tests:
# pnpm run test:all